<!-- File: ThesisView.xaml -->
<UserControl x:Class="DataGridNamespace.ThesisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataGridNamespace"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900"
             Background="#EFF2F7">

    <!-- تعليق: تعريف الموارد والأنماط داخل الواجهة نفسها -->
    <!-- Define resources and styles within the UserControl itself -->
    <UserControl.Resources>
        <!-- Style for Column Headers -->
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#006060"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#004D40"/>
        </Style>
        <!-- Style for Rows -->
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Padding" Value="0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0F2F1"/>
                </Trigger>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#B2DFDB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style for Cells -->
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style for Action Buttons -->
        <Style x:Key="DataGridButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Name="ButtonBorder">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#4DB6AC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#00897B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style for TextBox (Referencing App.xaml style if available) -->
        <Style TargetType="TextBox" x:Key="FilterTextBoxStyle" BasedOn="{StaticResource filterTextBox}"/>

    </UserControl.Resources>

    <!-- Main Layout Grid -->
    <Grid Margin="25,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Available Theses" FontSize="26" FontWeight="SemiBold" Foreground="#004D40" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Search Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#333" FontWeight="Medium"/>
            <TextBox x:Name="SearchTextBox" Width="350" Padding="8,6" Tag="Search..." TextChanged="SearchTextBox_TextChanged" Style="{StaticResource FilterTextBoxStyle}" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Content Grid (DataGrid + Loading) -->
        <Grid Grid.Row="2">
            <!-- DataGrid -->
            <DataGrid x:Name="ThesesDataGrid" 
                      ItemsSource="{Binding ThesesView}" 
                      AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      AlternationCount="2" GridLinesVisibility="None" Background="White" BorderBrush="#CCCCCC" 
                      BorderThickness="1" CanUserAddRows="False" SelectionMode="Single" HeadersVisibility="Column" RowHeaderWidth="0">

                <DataGrid.Columns>
                    <!-- Data Columns -->
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="2*"/>
                    <DataGridTextColumn Header="Specialty" Binding="{Binding Specialty}" Width="2*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="1.2*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding DisplayYear}" Width="Auto"/>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!-- View PDF Button -->
                                    <Button Style="{StaticResource DataGridButtonStyle}" Click="ViewPdfButton_Click" ToolTip="View PDF" CommandParameter="{Binding PdfLink}">
                                        <icon:PackIconMaterial Kind="FilePdfBox" Foreground="#C0392B" Width="18" Height="18"/>
                                    </Button>
                                    <!-- Toggle Favorite Button -->
                                    <Button Style="{StaticResource DataGridButtonStyle}" Click="ToggleFavoriteButton_Click" ToolTip="Add/Remove Favorite" CommandParameter="{Binding}">
                                        <icon:PackIconMaterial Width="18" Height="18">
                                            <icon:PackIconMaterial.Style>
                                                <Style TargetType="{x:Type icon:PackIconMaterial}">
                                                    <Setter Property="Kind" Value="HeartOutline"/>
                                                    <Setter Property="Foreground" Value="#757575"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                            <Setter Property="Kind" Value="Heart"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </icon:PackIconMaterial.Style>
                                        </icon:PackIconMaterial>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Loading Indicator -->
            <Border x:Name="LoadingIndicator" Background="#AAFFFFFF" CornerRadius="0" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="30" Height="30" Margin="0,0,10,0"/>
                    <TextBlock Text="Loading Theses..." VerticalAlignment="Center" FontSize="16" Foreground="#333" FontWeight="Medium"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>