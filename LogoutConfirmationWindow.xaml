<Window x:Class="DataGridNamespace.LogoutConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logout Confirmation" 
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="#008080" Padding="20" SnapsToDevicePixels="True">
        <StackPanel>
            <TextBlock Text="Are you sure you want to log out?" 
                       Foreground="White" 
                       FontSize="16" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="YesButton" Content="Yes" Width="75" Margin="5"
                        Click="YesButton_Click" />
                <Button x:Name="NoButton" Content="No" Width="75" Margin="5"
                        Click="NoButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
